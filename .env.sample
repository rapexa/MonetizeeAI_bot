# ============================================================
# MonetizeeAI Bot - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your values.
# ‚ö†Ô∏è  NEVER commit .env with real secrets to git!
# ============================================================

# ------------------------------------------------------------
# MODE: Set to "true" for local development (relaxes secret requirements)
# ------------------------------------------------------------
DEVELOPMENT_MODE=false

# ------------------------------------------------------------
# Telegram Bot
# ------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ------------------------------------------------------------
# AI API (Groq is primary; OpenAI is optional backup)
# ------------------------------------------------------------
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ------------------------------------------------------------
# Database (MySQL)
# ------------------------------------------------------------
MYSQL_DSN=user:password@tcp(127.0.0.1:3306)/monetizeeai?charset=utf8mb4&parseTime=True&loc=Local

# ------------------------------------------------------------
# Web API Server
# ------------------------------------------------------------
WEB_API_ENABLED=true
WEB_API_PORT=8080

# Prometheus /metrics IP allowlist (comma-separated). Default: 127.0.0.1, ::1 only.
# METRICS_ALLOWLIST=10.0.0.1,192.168.1.1

# ------------------------------------------------------------
# Mini App (Telegram WebApp)
# ------------------------------------------------------------
MINI_APP_ENABLED=true
MINI_APP_URL=https://yourdomain.com/miniapp

# ------------------------------------------------------------
# Payment - Zarinpal (üîí REQUIRED in production)
# ------------------------------------------------------------
ZARINPAL_MERCHANT_ID=your_zarinpal_merchant_id_here
ZARINPAL_CALLBACK_URL=https://yourdomain.com/payment/callback

# ------------------------------------------------------------
# SMS - IPPanel (üîí REQUIRED in production)
# ------------------------------------------------------------
IPPANEL_API_KEY=your_ippanel_api_key_here
IPPANEL_BASE_URL=https://api2.ippanel.com/api/v1/sms/pattern/normal/send
IPPANEL_SENDER=+983000505

# SMS Pattern Codes (optional - set your own patterns)
SMS_PATTERN_SIGNUP=
SMS_PATTERN_DAY_ONE=
SMS_PATTERN_DAY_TWO=
SMS_PATTERN_EXPIRE=
SMS_PATTERN_SUBSCRIPTION_ONE_MONTH=
SMS_PATTERN_SUBSCRIPTION_SIX_MONTH=
SMS_PATTERN_SUBSCRIPTION_UNLIMITED=